<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.monash.app.ui.activity.HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/colorPrimary">
                <LinearLayout
                    android:id="@+id/cur_temp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/cur_temp_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="0"
                        android:textSize="40sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="â„ƒ"
                        android:textSize="40sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="30dp"
                    android:layout_toRightOf="@+id/cur_temp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="10dp"
                        android:id="@+id/current_weather_img"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_0"/>

                    <TextClock
                        android:id="@+id/cur_time"
                        android:layout_marginStart="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="12:21"
                        android:textSize="40dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:showDividers="middle"
                    android:divider="@drawable/white_vertical_divider_line"
                    android:dividerPadding="3dp"
                    android:layout_marginLeft="30dp"
                    android:layout_below="@id/cur_temp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/city_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginRight="6dp"
                        android:textSize="18sp"
                        android:text="Null"/>
                    <TextView
                        android:id="@+id/weather_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginLeft="6dp"
                        android:textSize="18sp"
                        android:text="Null"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:showDividers="middle"
                    android:divider="@drawable/white_vertical_divider_line"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:text="Humidity"/>
                        <TextView
                            android:id="@+id/humidity"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="@color/white"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:text="Null"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:text="Visibility"/>
                        <TextView
                            android:id="@+id/visibility"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="@color/white"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:text="Null"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:text="Wind Direction"/>
                        <TextView
                            android:id="@+id/wind_direction"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="@color/white"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:text="Null"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:showDividers="beginning|middle|end"
                android:divider="@drawable/gray_horizontal_divider_line"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">
                    <ImageView
                        android:id="@+id/predict_weather_type_img1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/a0"/>
                    <TextView
                        android:id="@+id/predict_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/predict_weather_type_img1"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="20sp"
                        android:text="Null"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/predict_one"
                        android:layout_below="@id/predict_one"
                        android:showDividers="middle"
                        android:divider="@drawable/gray_vertical_divider_line"
                        android:dividerPadding="2dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/predict_weather_type_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:textSize="15sp"
                            android:text="Null"/>
                        <TextView
                            android:id="@+id/predict_wind_power_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="15sp"
                            android:text="Null" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/predict_lower_higher_temp_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:layout_centerInParent="true"
                        android:textSize="20sp"
                        android:text="Null"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">
                    <ImageView
                        android:id="@+id/predict_weather_type_img2"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/a0"/>
                    <TextView
                        android:id="@+id/predict_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/predict_weather_type_img2"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="20sp"
                        android:text="Null"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/predict_two"
                        android:layout_below="@id/predict_two"
                        android:showDividers="middle"
                        android:divider="@drawable/gray_vertical_divider_line"
                        android:dividerPadding="2dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/predict_weather_type_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:textSize="15sp"
                            android:text="Null"/>
                        <TextView
                            android:id="@+id/predict_wind_power_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="15sp"
                            android:text="Null" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/predict_lower_higher_temp_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:layout_centerInParent="true"
                        android:textSize="20sp"
                        android:text="Null"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">
                    <ImageView
                        android:id="@+id/predict_weather_type_img3"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/a0"/>
                    <TextView
                        android:id="@+id/predict_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/predict_weather_type_img3"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="20sp"
                        android:text="Null"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/predict_three"
                        android:layout_below="@id/predict_three"
                        android:showDividers="middle"
                        android:divider="@drawable/gray_vertical_divider_line"
                        android:dividerPadding="2dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/predict_weather_type_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:textSize="15sp"
                            android:text="Null"/>
                        <TextView
                            android:id="@+id/predict_wind_power_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="15sp"
                            android:text="Null" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/predict_lower_higher_temp_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:layout_centerInParent="true"
                        android:textSize="20sp"
                        android:text="Null"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">
                    <ImageView
                        android:id="@+id/predict_weather_type_img4"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/a0"/>
                    <TextView
                        android:id="@+id/predict_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/predict_weather_type_img4"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="20sp"
                        android:text="Null"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/predict_four"
                        android:layout_below="@id/predict_four"
                        android:showDividers="middle"
                        android:divider="@drawable/gray_vertical_divider_line"
                        android:dividerPadding="2dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/predict_weather_type_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:textSize="15sp"
                            android:text="Null"/>
                        <TextView
                            android:id="@+id/predict_wind_power_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="15sp"
                            android:text="Null" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/predict_lower_higher_temp_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:layout_centerInParent="true"
                        android:textSize="20sp"
                        android:text="Null"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
