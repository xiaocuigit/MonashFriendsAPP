<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/friends_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleColor="?attr/colorPrimary"
    app:mrl_rippleOverlay="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:background="@drawable/abc_popup_background_mtrl_mult"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_friend_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_marginTop="5dp"
                android:layout_marginStart="25dp"
                android:paddingTop="6dp"
                android:textColor="@color/darkblue"
                android:text="Ruilong Cui"
                android:textSize="@dimen/abc_text_size_medium_material"/>

            <ImageButton
                android:id="@+id/ib_friend_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_more_grey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_friend_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:padding="10dp"
                android:textColor="#848484"
                android:text="***@student.monash.edu"
                android:textSize="@dimen/abc_text_size_small_material"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/tv_friend_gender"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:textColor="#848484"
                android:textSize="@dimen/abc_text_size_small_material"
                android:text="femal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_friend_nation"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:textColor="#848484"
                android:textSize="@dimen/abc_text_size_small_material"
                android:text="China"/>

            <TextView
                android:id="@+id/tv_friend_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#848484"
                android:text="course"
                android:textSize="@dimen/abc_text_size_small_material"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_friend_favMovie"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_weight="1"
                android:textColor="#848484"
                android:textSize="@dimen/abc_text_size_small_material"
                android:text="Favorite Movie"/>
        </LinearLayout>


    </LinearLayout>
</com.balysv.materialripple.MaterialRippleLayout>

